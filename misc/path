#!/bin/sh
##############################################################
# --- PATH SETUP ---
COMP_TYPE=$(cat $HOME/.comptype)
if [[ $COMP_TYPE == "local" ]] ; then
    export PATH=/opt/gpg2/bin:/opt/local/bin:/opt/local/libexec/gnubin:/opt/local/sbin:/bin:/sbin:/usr/bin:/usr/local/bin:/usr/sbin
    export PYTHONPATH=$HOME/bin/modules
else 

    export LD_LIBRARY_PATH="${HOME}/local/lib/python2.7/site-packages:${HOME}/local/lib:${HOME}/local/lib64:${LD_LIBRARY_PATH}"
    export PATH="$HOME/local/bin:$PATH"

    # LAPACK libraries
    export BLAS_LIBS="$HOME/local/lib/libblas.a"
    export LAPACK_LIBS="$HOME/local/lib/liblapack.a"

    export PATH="${HOME}/local/bin:/bin:/opt/cross/bin:/opt/intel/fce/10.1.018/bin:/opt/kde3/bin:/usr/X11R6/bin:/usr/bin:/usr/bin/X11:/usr/games:/usr/lib/mit/bin:/usr/lib/mit/sbin:/usr/lib/qt3/bin:/usr/local/bin:/usr/local/mpich2/bin:"

    export PYTHONPATH="${HOME}/local/pymol:${HOME}/local/pymol/modules/pymol/pymol_path:${HOME}/local/pymol/modules/pymol/pymol_path/data/pymol:${HOME}/local/pymol/modules/pymol2:$HOME/bin/modules/lib/python2.7/site-packages"

    if [[ -f $HOME/.ld_path.orig ]] ; then
        export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$(cat $HOME/.ld_path.orig)
    fi
    if [[ -f $HOME/.path.orig ]] ; then
        export PATH=$PATH:$(cat $HOME/.ld_path.orig)
    fi
fi

# make sure the regular bin is available
export PATH="$HOME/bin:$HOME/local/bin:$HOME/local/.gems/bin:$PATH"
export PYTHONPATH=$HOME/local/lib/python2.7/site-packages:$PYTHONPATH

# Ruby Gems
export GEM_HOME=$HOME/local/.gems
export GEM=$(which gem1.9 2> /dev/null)
if [[ ! -x $GEM ]] ; then
    GEM=$(which gem 2> /dev/null)
fi

# python modules
export PIP=$(which pip-2.7)
if [[ ! -x $PIP ]] ; then
    PIP=$(which pip)
fi
