#!/bin/sh

# define a global ANSI color variable from name and color-code
color_def() {
    local name=$1
    local ansi_color=$2
    eval 'export '${name}'=$(tput setaf '${ansi_color}')'
    eval 'export '${name}'_BG=$(tput setab '${ansi_color}')'
}

# printcolor: print the available 256 colors
color_list() {
    printf "\tfg \t\t bg"
    for i in $(seq 0 255) ; do
        local fg=$(tput setaf $i)
        local bg=$(tput setab $i)
        printf "${fg}$i \t color \t\t$bg colour$i$NC\n"
    done
}

# print a block of colors with numbers
color_block() {
  if [[ $# -eq 1 ]] ; then
      local mode=$1
  else
      local mode=f
  fi

  for line in $(seq 0 17); do
      for col in $(seq 0 15); do
          local code=$(($col * 18 + $line))
          # local color=$(tput seta$mode $code)
          printf $'\e[38;05;%dm %03d' $code $code;
    done
    echo
  done
}

## -- Colors --
# text attributes
NC=$(tput sgr0)
BOLD=$(tput bold)
UNDER=$(tput smul)
BLINK=$(tput blink)
INVER=$(tput smso)
NO_INVER=$(tput rmso)
ITALIC=$(tput sitm)
BELL=$(tput flash)

# general colors
gencol=(BLACK RED GREEN YELLOW BLUE MAGENTA CYAN WHITE)
for ansi_color in $(seq 0 7); do
    name=${gencol[$(($ansi_color + 1))]}
    color_def $name $ansi_color
    color_def ${name}_BRIGHT $(($ansi_color + 8))
done
unset gencol
unset ansi_color

# special colors
color_def ERROR_RED 196

## colors chosen for OSX terminal
#--- normal ---#
# black   - #000000
# red     - #993333
# green   - #339900
# yellow  - #CC9900
# blue    - #336699
# magenta - #993399
# cyan    - #009999
# white   - #CCCCCC
#
#--- bright ---#
# black   - #666666
# red     - #FF6666
# green   - #66CC33
# yellow  - #FFFF66
# blue    - #6699CC
# magenta - #CC99CC
# cyan    - #33CCCC
# white   - #FFFFFF

