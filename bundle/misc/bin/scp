#!/usr/bin/env bash
# scp has no way to tell gpg-agent where we are!
# so ... We gotta tell the agent first

echo UPDATESTARTUPTTY | gpg-connect-agent &> /dev/null

# ok, now we can run scp
if [[ -x /opt/local/bin/scp ]] ; then
  /opt/local/bin/scp $@
elif [[ -x /usr/bin/scp ]] ; then
  /usr/bin/scp $@
else
  echo "scp is not in an expected location" &>2
fi
