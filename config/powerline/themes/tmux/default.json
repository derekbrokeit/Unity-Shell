{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"uptime": {
			"before": "⇑  "
		},
		"external_ip": {
			"before": "ⓦ  "
		},
		"date": {
			"before": "◷ "
		},
		"email_imap_alert": {
			"before": "✉ ",
			"args": {
				"username": "",
				"password": ""
			}
		},
		"branch": {
			"before": " "
		},
        "battery": {
            "before": "♡  "
        }
	},
	"segments": {
        "left": [
			{
				"name": "hostname",
                "priority": 20,
                "args": {
                    "exclude_domain": true
                }
			},
			{
				"name": "external_ip",
				"priority": 30
			},
			{
				"name": "branch",
                "priority": 40,
                "args": {
                    "status_colors": true

                 }
			},
            {
                "name": "cwd",
                "priority":50,
                "args": {
                    "dir_shorten_len": false,
                    "dir_limit_depth": 3
                }
            }
        ],
		"right": [
			{
				"name": "uptime",
				"priority": 50
			},
			{
				"name": "system_load",
				"priority": 50
			},
            {
                "name": "weather"
            },
            {
                "name": "battery"
            },
			{
				"name": "date"
			},
			{
				"name": "date",
				"args": {
					"format": "%H:%M",
					"istime": true
				}
			},
			{
				"name": "email_imap_alert",
				"priority": 10
			}
		]
	}
}
